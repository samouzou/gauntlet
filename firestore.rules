rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      // Users can read their own data.
      allow get: if isOwner(userId);
      
      // Users can create their own user document.
      allow create: if isOwner(userId);

      // Users can update their display name, photo, but not credits, runs, or high score.
      allow update: if isOwner(userId) && request.resource.data.credits == resource.data.credits;
    }

    match /users/{userId}/gauntlet_runs/{runId} {
      // A user can create, read, and list their own gauntlet runs.
      allow read, list, create: if isOwner(userId);
      // Nobody can update or delete runs to preserve history.
      allow update, delete: if false;
    }

    match /products/{productId} {
      // Products should be publicly readable to display purchase options.
      allow read: if true;
      // Only admins should be able to create, update, or delete products.
      allow write: if false;
    }
  }
}
